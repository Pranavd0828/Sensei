# Database
# For local development with SQLite
DATABASE_URL="file:./dev.db"

# Authentication
# Generate a random secret: openssl rand -base64 32
JWT_SECRET="your-secret-key-change-in-production-use-random-string"
JWT_EXPIRES_IN="7d"
MAGIC_LINK_EXPIRES_IN="15m"

# LLM Provider (Claude API by Anthropic)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key-here"
ANTHROPIC_MODEL="claude-3-5-sonnet-20241022"
# Alternative: "claude-3-opus-20240229" for higher quality (more expensive)

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email Service (for magic links)
# Development: Use "console" to log links to terminal
# Production: Use "smtp" and configure SMTP settings
EMAIL_PROVIDER="console"

# SMTP Configuration (only needed if EMAIL_PROVIDER="smtp")
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@sensei.app"

# Optional: Logging and Monitoring
LOG_LEVEL="info"
# LOG_LEVEL options: "debug", "info", "warn", "error"

# Optional: Sentry Error Tracking (for production)
# SENTRY_DSN=""

# Optional: Analytics (PostHog, Mixpanel, etc.)
# ANALYTICS_KEY=""
